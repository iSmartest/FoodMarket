<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shop_picture1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_fail_empty" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_sku_shop_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥118.0"
                android:layout_weight="1"
                android:textColor="@color/btn_login_color"
                android:textSize="20sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_sku_shop_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="库存566件"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_sku_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/btn_login_color"
            android:padding="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_item_sku_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="选择口味"
                    android:textColor="#FF6c00"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">
                    <com.lixin.foodmarket.view.FlowLayout
                        android:id="@+id/tf_flavor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        zhy:gravity="@string/gravity_left"
                        zhy:max_select="1"/>
                </LinearLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/linear_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/text_item_sku_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="选择口味"
                    android:textColor="#FF6c00"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">
                    <com.lixin.foodmarket.view.FlowLayout
                        android:id="@+id/tf_flavor1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        zhy:gravity="@string/gravity_left"
                        zhy:max_select="1"/>
                </LinearLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买数量"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:id="@+id/rl_shop_add_reduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:gravity="center|right"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:id="@+id/iv_shop_reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/iv_sub"/>
                        <TextView
                            android:id="@+id/tv_shop_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="1"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/btn_login_color" />
                        <ImageView
                            android:id="@+id/iv_shop_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/iv_add" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/popupwind_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_btn_text"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white_smoke"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"/>
    </FrameLayout>
</LinearLayout>