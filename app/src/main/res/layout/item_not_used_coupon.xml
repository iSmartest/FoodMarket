<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_backgroud_text"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/btn_login_color"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/text_item_not_used_coupon_securities_reduce_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@color/btn_login_color"
                        android:textSize="20sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_coupon_not_used"
                    android:text="优惠券"
                    android:textColor="@color/white_smoke"
                    android:textSize="16sp"
                    android:padding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满减红包"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/text_item_not_used_coupon_securities_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单满300元可用订单满300元可用订单满300元可用"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/text_item_not_used_coupon_immediate_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:gravity="center"
            android:padding="4sp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_btn_text"/>
        <TextView
            android:id="@+id/text_item_not_used_coupon_securities_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示：有效期至：2017-03-08,过期失效"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/text_message"/>
    </LinearLayout>
</LinearLayout>