<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_myorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyAllOrderActivity">
    <include layout="@layout/activity_base"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@color/white_smoke"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tv_all_order"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:text="全部订单"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_wait_payment"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:text="待付款"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_wait_pending"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:gravity="center"
            android:text="待发货"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_wait_goods"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:gravity="center"
            android:text="待收货"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_wait_evaluate"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:gravity="center"
            android:text="待评价"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/tv_is_complete"
            style="@style/main_bottom_tab_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:text="退款售后"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:background="@color/white_smoke">
        <ImageView
            android:id="@+id/cursor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/cursor0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/cursor1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cursor2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cursor3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/cursor4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_bg"
            android:visibility="invisible" />
    </LinearLayout>

    <com.lixin.foodmarket.view.LazyViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_smoke"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>
