<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017-03-08"
        android:padding="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/iv_my_collection_share_shop_picture"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/image_fail_empty" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp">
            <TextView
                android:id="@+id/text_my_collection_share_shop_name"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:maxEms="6"
                android:text="进口天然海贝"
                android:gravity="center|left"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_my_collection_share_shop_price"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="现价"
                android:gravity="center|left"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_my_collection_share_shop_original_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="市场价"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_my_collection_share_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iv_delete"/>
    </LinearLayout>
</LinearLayout>