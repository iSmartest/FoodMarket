<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <include layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white_smoke"
        android:paddingTop="8dp"
        android:padding="8dp">
        <ImageView
            android:id="@+id/iv_now_buy_shop_picture"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_fail_empty" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_now_buy_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_now_buy_shop_flavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="香辣"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_now_buy_shop_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥118.0"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textColor="@color/btn_login_color"
                android:textSize="20sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_now_buy_shop_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="×1"
                android:gravity="center|right"
                android:layout_marginTop="10dp"
                android:textColor="@color/btn_login_color"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingRight="8dp"
        android:paddingBottom="15dp"
        android:paddingLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款标题："
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/a_now_foot_leaving_a_message"
            android:textSize="16dp"
            android:textColorHint="@color/hint_text_color_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="输入退款标题，如没时间"
            android:background="@drawable/shape_text_edit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingRight="8dp"
        android:paddingBottom="15dp"
        android:paddingLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/s_text_click"
            android:textSize="18sp"
            android:maxEms="4"
            android:text="退款金额"
            android:gravity="center|left"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/text_buy_foot_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:maxEms="4"
            android:text="￥8.00"
            android:layout_marginLeft="8dp"
            android:gravity="center|left"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edit_add_address_dec"
            style="@style/DefaultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            android:gravity="left|top"
            android:hint="请输入您的详细收货地址：务必包含小区、楼层、单元、门牌号等信息"
            android:layout_weight="1"
            android:maxLines="12"
            android:minLines="4"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/hint_text_color_default" />
    </LinearLayout>
    <TextView
        android:id="@+id/text_add_address_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_text"
        android:layout_marginTop="30dp"
        android:text="提交申请"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"/>
</LinearLayout>