<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <include layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edi_add_address_name"
            android:textSize="16dp"
            android:textColorHint="@color/hint_text_color_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请输入您的姓名"
            android:background="@drawable/shape_text_edit_no_corners"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edi_add_address_phone"
            android:textSize="16dp"
            android:textColorHint="@color/hint_text_color_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center|left"
            android:hint="请输入您的联系方式"
            android:background="@drawable/shape_text_edit_no_corners"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮编："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edi_add_address_post_code"
            android:textSize="16dp"
            android:textColorHint="@color/hint_text_color_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center|left"
            android:hint="请输入您的邮政编码"
            android:background="@drawable/shape_text_edit_no_corners"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省市："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <LinearLayout
            android:id="@+id/linear_add_address_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_text_edit_no_corners"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_add_address_province"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center|right"
                android:text="河南省郑州市管城回族区"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_down"
                android:layout_gravity="center|right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <LinearLayout
            android:id="@+id/linear_add_address_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <EditText
                android:id="@+id/text_add_address_community"
                android:textSize="16dp"
                android:textColorHint="@color/hint_text_color_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/shape_text_edit_no_corners"/>
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="小区"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_address_building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.4">
            <EditText
                android:id="@+id/text_add_address_building"
                android:textSize="16dp"
                android:textColorHint="@color/hint_text_color_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/shape_text_edit_no_corners"/>
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="栋"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_address_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.3">
            <EditText
                android:id="@+id/text_add_address_unit"
                android:textSize="16dp"
                android:textColorHint="@color/hint_text_color_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/shape_text_edit_no_corners"/>
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="单元"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edit_add_address_dec"
            style="@style/DefaultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            android:gravity="left|top"
            android:hint="请输入您的详细收货地址：务必包含小区、楼层、单元、门牌号等信息"
            android:layout_weight="1"
            android:maxLines="12"
            android:minLines="4"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/hint_text_color_default" />
    </LinearLayout>
        <TextView
            android:id="@+id/text_add_address_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_edit"
            android:layout_marginTop="30dp"
            android:text="添加"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"/>
</LinearLayout>