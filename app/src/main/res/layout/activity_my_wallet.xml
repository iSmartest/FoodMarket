<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:background="@color/btn_login_color">
        <LinearLayout
            android:id="@+id/ly_base_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Iv_my_wallet_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/iv_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="我的钱包"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/white_smoke"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_my_wallet_money_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="200dp"
            android:layout_marginRight="8dp"
            android:text="零钱明细"
            android:singleLine="true"
            android:textColor="@color/white_smoke"
            android:textSize="16dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/shape_backgroud_text"
        android:gravity="center"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="钱包余额（元）"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/text_my_wallet_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="888.8"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>