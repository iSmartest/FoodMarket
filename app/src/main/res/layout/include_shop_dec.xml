<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
            <com.lixin.foodmarket.view.ImageSlideshow
                android:id="@+id/img_shop_gallery"
                android:layout_width="match_parent"
                android:scaleY="1"
                android:scaleX="1"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/ly_shop_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/Iv_base_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_back"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="商品详情"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
            <LinearLayout
                android:id="@+id/linear_shop_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/shop_share"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white_smoke">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_shop_dec_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名字"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/text_shop_dec_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费：包邮"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/text_shop_dec_sales_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量：9985"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/linear_shop_dec_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_shop_dec_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_collection"/>
            <TextView
                android:id="@+id/text_shop_dec_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:background="@color/white_smoke">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left"
            >
            <TextView
                android:id="@+id/text_shop_dec_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现价：￥118.00"
                android:textSize="16sp"
                android:textColor="@color/btn_login_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场价:"
                android:textSize="12sp"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/text_shop_dec_market_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥298.00"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_shop_dec_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white_smoke"
        android:layout_marginTop="8dp">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/btn_login_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品特点"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke">
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">
        </WebView>
    </LinearLayout>

</LinearLayout>